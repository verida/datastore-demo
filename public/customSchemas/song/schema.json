{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "customSchemas/song/schema.json",
    "title": "Song",
    "description": "An example schema of songs",
    "type": "object",
    "database": {
        "name": "song"
    },
    "allOf": [
        {"$ref": "/schemas/base/schema.json"},
        {
            "properties": {
                "name": {
                    "title": "Name",
                    "type": "string"
                },
                "artist": {
                    "title": "Artist",
                    "type": "string"
                },
                "duration": {
                    "title": "Duration (seconds)",
                    "type": "integer"
                }
            },
            "required": ["name", "artist"]
        }
    ]
  }